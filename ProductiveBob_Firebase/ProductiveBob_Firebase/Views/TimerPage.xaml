<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductiveBob_Firebase.Views.TimerPage"
             xmlns:vm="clr-namespace:ProductiveBob_Firebase.ViewModels"
             Title="{Binding Title}"
             BackgroundColor="White"
             BackgroundImage="Saly43.png"
             >
    
    <ContentPage.BindingContext>
        <vm:TimerViewModel />
    </ContentPage.BindingContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout BackgroundColor="blue" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
            </StackLayout>
        </StackLayout>
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="20,20,20,20" Spacing="5">
                <Label
                    x:Name = "LabelTimer"
                    Grid.Row = "1"
                    HorizontalOptions="Center"
                    FontSize ="30"
                    TextColor="White"
                    Text="&#x0a; You can do it &#x0a;" />

                <Label
                    x:Name = "ResultTimer"
                    Grid.Row = "2"
                    HorizontalOptions="Center"
                    FontSize ="40"
                    TextColor="White"
                    Text=" " />
                <Button 
                    x:Name="StartClick"
                    Clicked="btn_Start_Clicked"
                    Grid.Row="3"
                    Text="Start"/>
                <Button 
                    x:Name="StopClick"
                    Clicked="btn_Stop_Clicked"
                    Grid.Row="4"
                    Text="Stop"/>
                <!--<Label
                    x:Name = "ResultTimer"
                    Grid.Row = "4"
                    HorizontalOptions="Center"
                    FontSize ="40"
                    TextColor="White"
                    Text=" " />-->
                <Label
                    x:Name = "Space"
                    Grid.Row = "5"
                    HorizontalOptions="Center"
                    FontSize ="20"
                    TextColor="White"
                    Text=" " />
                <Label
                    x:Name = "Rating"
                    Grid.Row = "6"
                    HorizontalOptions="Center"
                    FontSize ="20"
                    TextColor="White"
                    Text="How was your productivity?" />
                <Button 
                    x:Name="Good"
                    Clicked="btn_Good_Clicked"
                    Grid.Row="7"
                    Command ="{Binding NewSe} "
                    Text="Good"/>
                <Button 
                    x:Name="Medium"
                    Clicked="btn_Medium_Clicked"
                    Grid.Row="8"
                    Text="Medium"/>
                <Button 
                    x:Name="Bad"
                    Clicked="btn_Bad_Clicked"
                    Grid.Row="9"
                    Text="Bad"/>
            </StackLayout>
        </ScrollView>
    </Grid>
